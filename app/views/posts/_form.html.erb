<%= form_with(model: [@widget, post]) do |form| %>

<% if post.errors.any? %>
<div class="alert alert-warning alert-dismissible fade show">
    <h2> <%= t('errors.forms.title', count: post.errors.count) %></h2>
    <ul>
        <% post.errors.each do |error| %>
        <li>
            <span class="alert-text"><strong><%= t(:warning)%></strong> <%= error.full_message %></span>
        </li>
        <% end %>
    </ul>
</div>
<% end %>

<div class="card">
    <div class="card-header">
        <h3 class="mb-0"> <%= t('.title') %> </h3>
    </div>
    <div class="card-body">
        <div class="form-group field">
            <%= form.label :title, class: "form-control-label" %>
            <%= form.text_field :title, required: true, placeholder: "digite o tÃ­tulo do post", class: "form-control" %>

        </div>
        <div class="form-group field">
            <%= form.label :status, class: "form-control-label" %>
            <%= form.select :status, [["Rascunho", "1"], ["Publicado", "2"], ["Removido", "3"]], { required: true}, {class: "form-control"} %>

        </div>

        <div class="form-group field">
            <%= form.label :body, class: "form-control-label" %>
            <%= form.text_area :body, required: true, class: "form-control", rows: 3  %>
        </div>
    </div>
    <div class="card-footer">
        <%= form.submit class: "btn btn-primary" %>
    </div>

</div>


<% end %>